@model ContactModel

@{
    ViewData["Title"] = "Contact Us";
}

<h1>Contact Us</h1>

<div class="container">
@*<form asp-controller="Contact" asp-action="Index" method="post">*@ 
    @* You don't have to specify the asp-controller here *@
<form asp-action="Index" method="post">
    <!-- form fields with validation helpers here -->
        <div class="row form-group">
            <label asp-for="FirstName" class="col-md-3 col-form-label">First Name</label>
            <div class="col-md-3">
                <input asp-for="FirstName" class="form-control" />
            </div>
            <span asp-validation-for="FirstName" class="col text-danger"></span>
        </div>

        <div class="row form-group">
            <label asp-for="LastName" class="col-md-3 col-form-label">Last Name</label>
            <div class="col-md-3">
                <input asp-for="LastName" class="form-control" />
            </div>
            <span asp-validation-for="LastName" class="col text-danger"></span>
        </div>

        @*Add the remaining code for the Adress, Phone, Email and
            Message fields
            same code as FirstName and LastName on lines 12-18 and 20-26
            Be sure to change the field names to reflect Address, Phone, Email
            and Message
        *@
        <div class="row">
            <div class="col-offset-md-3">
                <button type="submit" class="btn btn-primary">Submit</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>

            </div>
        </div>
</form>
</div>

